<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/sb-admin-2.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/global.css') }}">
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/jquery.min.js') }}"></script>
        {% endblock %}
        <script src="https://kit.fontawesome.com/94bb5810ea.js" crossorigin="anonymous"></script>
    </head>
    <header>

    </header>
    <body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
    <!-- Sidebar -->
    <ul class="navbar-nav navbar-dark bg-dark sidebar sidebar-dark accordion" id="accordionSidebar">

        <!-- Sidebar - Brand -->
        <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
            <div class="sidebar-brand-icon rotate-n-15">
                <i class="fas fa-tachometer-alt"></i>
            </div>
            <div class="sidebar-brand-text mx-3">BusinessCase <sup>Admin</sup></div>
        </a>

        <!-- Divider -->
        <hr class="sidebar-divider my-0">

        <!-- Nav Item - Dashboard -->
        <li class="nav-item active">
            <a class="nav-link" href="{{ path('home') }}">
                <i class="fas fa-fw fa-home"></i>
                <span>Accueil</span></a>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider">

        <!-- Heading -->
        <div class="sidebar-heading">
            Gestion
        </div>

        <!-- Nav Item - Pages Collapse Menu -->
        <li class="nav-item">
            <a class="nav-link" href="{{ path('candidat') }}">
                <i class="fas fa-fw fa-users"></i>
                <span>Candidats</span>
            </a>
        </li>

        <!-- Nav Item - Utilities Collapse Menu -->
        <li class="nav-item">
            <a class="nav-link" href="{{ path('question') }}"
               aria-expanded="true" aria-controls="collapseUtilities">
                <i class="fas fa-fw fa-question"></i>
                <span>Questions</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('domain') }}"
               aria-expanded="true" aria-controls="collapseUtilities">
                <i class="fas fa-fw fa-brain"></i>
                <span>Domaines</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('level') }}"
               aria-expanded="true" aria-controls="collapseUtilities">
                <i class="fas fa-fw fa-layer-group"></i>
                <span>Niveaux</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('event') }}"
               aria-expanded="true" aria-controls="collapseUtilities">
                <i class="fas fa-fw fa-calendar-week"></i>
                <span>Infocos</span>
            </a>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider">

        <!-- Heading -->
        <div class="sidebar-heading">
            Profil
        </div>

        <!-- Nav Item - Pages Collapse Menu -->
    </ul>
    <!-- End of Sidebar -->
        {% block body %}{% endblock %}
    </div>
    </body>
</html>
